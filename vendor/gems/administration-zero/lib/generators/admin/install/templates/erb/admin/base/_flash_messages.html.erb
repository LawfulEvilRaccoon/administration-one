<div class="flash-messages-wrapper">
  <% flash.each do |message_type, message| %>
    <div class="toast show text-center text-white bg-dark border-0" data-controller="flash-message" data-action="animationend->flash-message#remove">
      <div class="toast-body message-<%= message_type %>">
        <%= message %>
      </div>
    </div>
  <% end %>
</div>