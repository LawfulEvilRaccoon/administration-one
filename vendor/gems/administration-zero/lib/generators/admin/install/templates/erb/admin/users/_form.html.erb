<%= form_with(model: [:admin, user]) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :username, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.text_field :username, class: "form-control" %>
      <%= tag.div user.errors[:username].first.try(:capitalize), class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :email_address, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.email_field :email_address, autocomplete: "email", class: "form-control" %>
      <%= tag.div user.errors[:email_address].first.try(:capitalize), class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :password, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <%= tag.div user.errors[:password].first.try(:capitalize), class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password_confirmation, class: "form-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      <%= tag.div user.errors[:password_confirmation].first.try(:capitalize), class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-group row mb-2">
    <%= form.label :is_admin, class: "form-check-label col-md-3 col-form-label" %>
    <div class="col-md px-0">
      <% if user.is_admin? && action_name != "new" %>
        <%= form.check_box :is_admin, checked: true, class: "form-check-input" %>
      <%else%>
        <%= form.check_box :is_admin, checked: false, class: "form-check-input" %>
      <%end%>
      <%= tag.div user.errors[:published].first.try(:capitalize), class: "invalid-feedback" %>
    </div>
  </div>

  <div class="form-footer">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_users_path, class: "btn btn-white" %>
  </div>
<% end %>
