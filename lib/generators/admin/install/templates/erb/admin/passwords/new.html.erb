<%= form_with(url: admin_passwords_path) do |form| %>
  <div class="card-body card card-md">
    <h1 class="card-title text-center mb-4">Reset your password</h1>
    <div class="mb-3">
      <%= form.email_field :email_address, placeholder: "Enter your email address", autofocus: true, required: true, class:"form-control" %>
    </div>
    <div class="form-footer">
      <%= form.submit "Email reset instructions", class: "btn btn-primary w-100" %>
    </div>
  </div>
<% end %>
